<main>
    <h1>Edit {{tool.model}} ({{tool.tool_type.name}})</h1>
    <form action="/admin/tools/{{tool._id}}/edit" method="post" enctype="multipart/form-data"
        class="form-control edit-tool-form">
        <input type="text" name="brand" placeholder="Brand" value="{{tool.brand}}">
        <input type="text" name="model" placeholder="Model" value="{{tool.model}}">
        <textarea name="description" cols="30" rows="10">{{tool.description}}</textarea>
        <input type="text" name="price_per_day" placeholder="Price per day" value="{{tool.price_per_day}}">
        <img src="{{tool.picture_url}}" alt="{{tool.model}}">
        <input type="file" name="picture_url">
        <select name="tool_type">
            {{#each tooltypes}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
        <div class="usecases-checkboxes-container">
            {{#each usecases}}
            <input type="checkbox" name="{{this._id}}" id="{{this.name}}">
            <label for="{{this.name}}">{{this.name}}</label>
            {{/each}}
        </div>

        <button class="btn btn-turquoise">Save changes</button>
    </form>
</main>