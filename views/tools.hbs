<h1>Tools</h1>

<a href="/reservation">Make a reservation</a>

{{#each toolsList}}
  <div class="card">
    <div>
      <h2>{{this.model}}</h2>
      <h3>{{this.brand}}</h3>
      <picture>
        <img
          class="tool-image"
          src="{{this.picture_url}}"
          alt="{{this.model}}"
        />
      </picture>
      <p><span>Description: </span>{{this.description}}</p>
      <p><span>Price: </span>{{this.price_per_day}}â‚¬/day</p>
      <a href="/tools/{{this._id}}" id="tool-link">View details </a>
      <form action="/tools/{{this._id}}/addToCart" method="get">
        <button class="add-to-cart">Add To Cart</button>
      </form>
      <p>
        <span>tags: </span>
        {{#each this.use_case}}
          <span class="use-case">{{this}}</span>
        {{/each}}
      </p>
    </div>
  </div>
{{/each}}