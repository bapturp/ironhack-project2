<div class="profile-container container">
  <h1>Profile</h1>

  <section class="profile-infos">
    <h2>Infos</h2>
    <div class="profile-infos-bloc">
      <div class="profile-labels">
        <span>Name: </span>
        <span>Email: </span>
      </div>
      <div class="profile-credentials">
        <p>{{currentUser.username}}</p>
        <p>{{currentUser.email}}</p>
      </div>
    </div>

    <a href="/profile/change">Change credentials</a>
    {{#if savedChanges}}
      <p>{{savedChanges}}</p>
    {{/if}}
  </section>

  <section id="current-reservations">
    <h2>Current reservations</h2>
    {{#if currentReservations}}
      <table class="table-control">
        <tr>
          <th>Tool type</th>
          <th>Tool</th>
          <th>Start date</th>
          <th>End date</th>
        </tr>
        {{#each currentReservations}}
          <tr>
            <td>{{this.tool.tool_type.name}}</td>
            <td>{{this.tool.model}}</td>
            <td class="trim-date">{{this.start_date}}</td>
            <td class="trim-date">{{this.end_date}}</td>
          </tr>
        {{/each}}
      </table>
      {{!-- {{#each currentReservations}}
      <div>
        <span>{{this.tool.brand}} {{this.tool.model}}</span>
        <p><span>Start date: </span>{{this.start_date}}</p>
        <p><span>End date: </span>{{this.end_date}}</p>
      </div>

    {{/each}} --}}
    {{else}}
      <p>No current reservations</p>
    {{/if}}

  </section>

  <section id="passed-reservations">
    <h2>Passed reservations</h2>
    {{#if passedReservations}}
      <table class="table-control">
        <tr>
          <th>Tool type</th>
          <th>Tool</th>
          <th>Start date</th>
          <th>End date</th>
        </tr>
        {{#each passedReservations}}
          <tr>
            <td>{{this.tool.tool_type.name}}</td>
            <td>{{this.tool.model}}</td>
            <td class="trim-date">{{this.start_date}}</td>
            <td class="trim-date">{{this.end_date}}</td>
          </tr>
        {{/each}}
      </table>
      {{!-- {{#each passedReservations}}
      <div>
        <span>{{this.tool.brand}} {{this.tool.model}}</span>
        <p><span>Start date: </span>{{this.start_date}}</p>
        <p><span>End date: </span>{{this.end_date}}</p>
      </div>
    {{/each}} --}}
    {{else}}
      <p>No passed reservations</p>
    {{/if}}

  </section>
</div>