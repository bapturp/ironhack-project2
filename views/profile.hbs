<h1>Profile</h1>

<section>
  <h2>Infos</h2>
  <p><span>Name: </span>{{currentUser.username}}</p>
  <p><span>Email: </span>{{currentUser.email}}</p>
  <a href="/profile/change">Change credentials</a>
  {{#if savedChanges}}
    <p>{{savedChanges}}</p>
  {{/if}}
</section>

<section id="current-reservations">
  <h2>Current reservations</h2>
  {{#if currentReservations}}
    <table class="table-control">
      <tr>
        <th>Tool type</th>
        <th>Tool</th>
        <th>Start date</th>
        <th>End date</th>
      </tr>
      {{#each currentReservations}}
        <tr>
          <td>{{this.tool.tool_type.name}}</td>
          <td>{{this.tool.model}}</td>
          <td class="trim-date">{{this.start_date}}</td>
          <td class="trim-date">{{this.end_date}}</td>
        </tr>
      {{/each}}
    </table>
    {{!-- {{#each currentReservations}}
      <div>
        <span>{{this.tool.brand}} {{this.tool.model}}</span>
        <p><span>Start date: </span>{{this.start_date}}</p>
        <p><span>End date: </span>{{this.end_date}}</p>
      </div>

    {{/each}} --}}
  {{else}}
    <p>No current reservations</p>
  {{/if}}

</section>

