<h1>Cart</h1>

{{#if cart}}
  <a href="/cart/clear">Clear cart</a>

  <a href="/checkout">Finalize !</a>
  <h2>Total: {{totalPrice}} â‚¬</h2>
  {{#each reservedTools}}
    <div class="card">
      <div>
        <h2>{{this.model}}</h2>
        <h3>{{this.brand}}</h3>
        <picture>
          <img
            class="tool-image"
            src="{{this.picture_url}}"
            alt="{{this.model}}"
          />
        </picture>
        <p><span>Description: </span>{{this.description}}</p>
        <p><span>Price: </span>{{this.price_per_day}}â‚¬/day</p>
        <a href="/tools/{{this._id}}" id="tool-link">View details </a>
        <a href="/cart/clear-item/{{this._id}}">Remove from cart</a>
        <p>
          <span>tags: </span>
          {{#each this.use_case}}
            <span class="use-case">{{this.name}}</span>
          {{/each}}
        </p>
      </div>
    </div>
  {{/each}}
{{else}}
  <h2>Your cart is empty ðŸ˜¢</h2>
{{/if}}