<section class="container flex-column">
  <a href="{{previousUrl}}" class="back-btn"><i class="fa-solid fa-chevron-left"></i>
    <span>Continue shopping</span>
  </a>
  <div class="block container">
    <div class="cart-header">
      <h1>Cart</h1>

      {{#if cart}}


      <a href="/cart/clear">Clear Cart <i class="fa-solid fa-trash"></i></a>
    </div>



    <section class="cart-list">
      {{#each reservedTools}}
      <div class="cart-item">
        <div class="cart-item-info">
          <picture>
            <img class="tool-image" src="{{this.picture_url}}" alt="{{this.model}}" />
          </picture>
          <div class="tool-info">
            <h3>{{this.brand}}</h3>
            <a href="/tools/{{tool._id}}" id="tool-link">
              <h2>{{this.model}}</h2>
            </a>
            <div class="price">{{this.price_per_day}}â‚¬/day</div>
          </div>

        </div>

        <div class="cart-item-btn d-flex flex-column gap-1">
          <a href="/cart/clear-item/{{this._id}}" class="btn btn-turquoise">Remove <i class="fa-solid fa-trash"></i></a>
        </div>
      </div>

      {{/each}}
      <div class="recap">
        <div>
          <h2>Total: {{totalPrice}}â‚¬</h2>

          <div class="dates">
            <span>From: </span>
            <span class="trim-cart-date">{{date.start}}</span>
            <span>To: </span>
            <span class="trim-cart-date">{{date.end}}</span>
          </div>
        </div>
        <div>
          <a href="/checkout" class="btn">Checkout</a>
        </div>
      </div>
    </section>


    {{else}}
  </div>

  <h2>Your cart is empty ðŸ˜¢</h2>
  {{/if}}
  </div>
</section>