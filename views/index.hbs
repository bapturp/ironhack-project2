<section id="home-top">
    <form action="/search" method="get" id="search-form">

        <div class="home-search">
            <div id="whats-the-plan"></div>
            I need
            <select name="tool_type">
                <option value="" selected>a tool</option>
                {{#each tooltypesList}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
            to
            <select name="use_case" id="">
                <option value="" selected>do something</option>
                {{#each usecasesList}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
            starting
            <input type="date" name="start_date" id="start_date" placeholder="today" />
            until
            <input type="date" name="end_date" id="end_date" />
        </div>
        <button class="btn btn-turquoise">Let's do this</button>
    </form>
</section>
<section class="activities">
    <article>ac1</article>
    <article>ac2</article>
    <article>a3</article>
</section>
<section class="trending">
    <div class="container justify-between">
        <h2>Latest tools</h2>
        <a href="/search">See all tools</a>
    </div>

    <section class="results-list">
        {{#each toolsList}}
        {{> toolCard}}
        {{/each}}
    </section>
</section>